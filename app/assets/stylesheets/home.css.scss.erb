@mixin linear_gradient($color1,$color2){
	background: -moz-linear-gradient(top,  $color1 0%, $color2 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,$color1), color-stop(100%,$color2)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  $color1 0%,$color2 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  $color1 0%,$color2 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  $color1 0%,$color2 100%); /* IE10+ */
	background: linear-gradient(to bottom,  $color1 0%,$color2 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='$color1', endColorstr='$color2',GradientType=0 ); /* IE6-9 */
}
//how to mask a seperation line or a seek bar
@mixin mask{
	width: 100%; height: 100%;
	position: absolute; top: 0; left:0;
	z-index: 20;
	background-image: url(<%=asset_path 'mask.png' %>);
	background-size: 100% 100%;
}
@mixin opacity($op){
	/* IE 8 */
	-ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=#{$op*100})";
	/* IE 5-7 */
	filter: alpha(opacity=$op*100);
	/* Netscape */
	-moz-opacity: $op;
	/* Safari 1.x */
	-khtml-opacity: $op;
	/* Good browsers */
	opacity: $op;
}
$mukke_blau: #0071BC;

$player_w: 90%;
$player_leftspace: 20%;
$line_h: 5px;
.player{
	width: $player_w; height: 180px;
	position: relative;
	margin: 0px auto;
	display: none;

	.trigger{
		display: block;
		.artwork{
			float: left;
			margin-left: $player_leftspace;
			position: relative;
			width: 140px; height: 140px;
			background-size: auto 100%;
			background-position: center;

			.play, .pause{
				display: none;
				width: 140px; height: 140px;
				background-repeat: no-repeat;
				direction: ltr;
    			text-indent: -9999px;
			}
			.play{
				background-image: url(<%=asset_path 'play.png' %>);
				background-position: 45px center;
			}
			.pause{
				background-image: url(<%=asset_path 'pause.png' %>);
				background-position: center center;
			}
		}
		&:hover{
			.show{
				display: block;
			}
		}
		.name{
			padding: 10px 0px 50px 40px;
			width: 40%; height: 80px;
			overflow: hidden;
			font-size: 30px;
			color: #534741; text-decoration: none;
		}
	}

	.sourceLink{
 		position: absolute; right:28%; bottom: 30 + $line_h * 3;
		img{
			width: 69px;
		}
	}

	.seekBar{
		width: 100%; height: $line_h;
		padding: $line_h 0;
		position: relative; top: -$line_h;
		.waiting{
			width: 100%; height:$line_h;
			background-color: #ccc;
			position: absolute; top: $line_h; left:0;
		}
		.bufferd{
			width: 0; height: $line_h;
			background-color: #777;
			position: absolute; top: $line_h; left:0;
		}

		.played{
			width: 100%; height: $line_h;
			position: absolute; top: $line_h; left:0;
		}
		.mask{
			background-position: center $line_h*-1;
			background-repeat: no-repeat;
			@include mask;
		}
	}
}
.nowPlaying{
	&:before{
		z-index: -10;
		content: ' ';
		position: absolute; top: -40px; left: 0;
		width: 100%; height:100%;
		@include linear_gradient(#99E0FF,#fff);
	}
	&:after{
		content: ' ';
		@include mask;
		top: -40px;
	}
}
.restricted{
	.artwork, .name, .seekBar{
		@include opacity(0.2);
	}
}
//source specific css
.from_youtube{
	.seekBar{
		.played{
			background-color: #AB0014;
			@include linear_gradient(#C70040,#AB0014);
		}
	}
}
.from_soundcloud{
	.seekBar{
		.played{
			background-color: #ED1C24;
			@include linear_gradient(#FF6600,#ED1C24);
		}
	}
}
.header{
	position: fixed; top: 0;
	background-color: #fff;
	width:100%;
	z-index: 200;
	.hBox{
		width: $player_w; height:80px + $line_h;
		margin: 20px auto 0 auto;
		.logo{
			width: 140px; height: 65px;
			margin: 0 0 15px $player_leftspace;
			direction: ltr;
			float: left;
			text-indent: -9999px;
			background-image: url(<%=asset_path 'fb-mukke-logo.svg' %>);
			background-size: auto 100%;
			background-repeat: no-repeat;
			background-position: center;
		}
		.headerLine{
			clear: both;
			position: relative;
			width: 100%; height: $line_h;
			background-color: #ccc;
			.blueLine{
				width: 100%; height: $line_h;
				background-color: $mukke_blau;
				@include linear_gradient(#29ABE2,$mukke_blau);
			}
			.mask{
				@include mask;
			}
		}
	}
}
.searchbar{
	height:75px; padding-top: 5px;
	width: 32%; display: inline-block;
	margin-left: 30px;
	position: relative;
	z-index: 200;
	#searchFriend{
		outline: none; display: block;
		padding: 8px 10px;
		width: 100%; height: 25px;
		border: none; border-radius: 2px;
		@include linear_gradient(#29ABE2,#0071BC);
		box-shadow: -3px 3px 10px -5px #000 inset;
		font-family: 'Gudea', sans-serif;
		color: #eee; font-size: 20px;
		z-index: 210; position: relative;
	}
	.searchresults{
		display: none;
		position: absolute; top: 40px; left: 0;
		width: 100%; height: auto;
		padding: 4px 10px 0 10px;
		background-color: #fff;
		box-shadow: 0 2px 5px -2px #000;
		z-index: 200;
		a{
			position: relative;
			left: -10px;
			padding: 8px 10px;
			width: 100%; height: 50px;
			display: block;
			img{
				width: 50px; height: 50px;
				float: left;
				margin-right: 20px;
			}
			p{
				font-size: 20px;
				margin-top: 8px;
				color: #534741; 
			}
		}
		.focus{
			@include linear_gradient(#99E0FF,#CAEFF9);
		}
	}
}