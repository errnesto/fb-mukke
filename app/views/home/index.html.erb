
<iframe id="ytPlayer" type="text/html" width="0" height="0"
	  	src="https://www.youtube.com/embed/?enablejsapi=1" 
	  	frameborder="0"></iframe><!-- add &origin=https://fb-mukke.herokuapp.com to url -->
<header class="header">
	<div class="hBox">
		<a href="/">
			<h1 class="logo">fb-mukke</h1>
		</a>
		<div class="searchbar">
			<input type="text" id="searchFriend" value="<%= @user.name %>"></input>
			<p class="searchresults"></p>
		</div>
		<div class="headerLine">
			<div class="blueLine"></div>
			<div class="mask"></div>
		</div>
	</div>
</header>
<% @songs.each_with_index do |song, i| %>
	<div class="player from_<%= song.source %>">
		<a class="trigger" name="<%= song.source %>" href="<%= song.identifier %>">
			<div class="artwork" style="background-image: url('<%= song.image %>;')">
				<p class="show play">play</p>
				<p class="pause">pause</p>
			</div>
			<h2 class="name"><%= song.name %></h2>
		</a>
		<a class="sourceLink" href="<%= song.url %>" target="_blank"><img src="<%=asset_path song.source+'_logo.png' %>"></a>
		<div class="seekBar">
			<div class="waiting"></div>
			<div class="bufferd"></div>
			<div class="played"></div>
			<div class="mask"></div>
		</div>
	</div>
<% end %>